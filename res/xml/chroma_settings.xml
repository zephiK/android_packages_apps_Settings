<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/chroma_settings_title" >

    <PreferenceScreen
        android:key="about_chroma"
        android:fragment="com.android.settings.chroma.ChromaAbout"
        android:title="@string/chroma_menu_about" />

    <PreferenceCategory
        android:key="category_chroma_personalization"
        android:title="@string/chroma_menu_personalizaton" >

    <PreferenceScreen
        android:fragment="com.android.settings.chroma.StatusBarSettings"
        android:key="status_bar_general_category"
        android:title="@string/status_bar_screen_title" />

    <PreferenceScreen
        android:fragment="com.android.settings.chroma.NavigationBarSettings"
        android:key="navigation_bar_general_category"
        android:title="@string/navigation_bar_screen_title" />

    <PreferenceScreen
        android:fragment="com.android.settings.chroma.PowerMenuActions"
        android:key="power_menu_general_category"
        android:title="@string/power_menu_title" />

    <PreferenceScreen
        android:fragment="com.android.settings.chroma.VolumeRockerSettings"
        android:key="volume_rocker_general_category"
        android:title="@string/volume_rocker_screen_title" />
</PreferenceCategory>
</PreferenceScreen>
